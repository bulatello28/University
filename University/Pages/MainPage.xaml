<Page x:Class="University.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:University.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Height="100" Grid.Column="0" Grid.Row="1" Click="AddDataClick">Add Data</Button>
        <Button Height="100" Grid.Column="2" Grid.Row="1" Click="ShowDataClick">Show Data</Button>
        <TextBlock Grid.Row="2" Margin="10">To add data, please click on the button above</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="2" Margin="10">To view data, please click on the button above</TextBlock>
    </Grid>
</Page>
