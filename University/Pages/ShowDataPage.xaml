<Page x:Class="University.Pages.ShowDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:University.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowDataPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Margin="40" Click="ShowTeachersClick">Show Teachers</Button>
        <Button Grid.Column="1" Margin="40" Click="ShowFac">Show Faculties</Button>
        <Button Grid.Row="1" Grid.Column="2" Margin="40" Click="ShowDeps">Show Departments</Button>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock>Please select the entity you want to see</TextBlock>
        </StackPanel>
        <StackPanel>
            <Button>Back</Button>
        </StackPanel>
    </Grid>
</Page>
